<div class="block" id="block-signup">
  <h2>Sign up</h2>
  <div class="content">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form"}) do |f| %>
    <div class="group">
      <label class="label"><%= f.label :name %></label>
      <%= f.text_field :name, :class => "text_field" %>
      <span class="description">Ex: John Truvynt</span>
    </div>
    
    <div class="group">
      <label class="label"><%= f.label :email %></label>
      <%= f.email_field :email, :class => "text_field" %>
      <span class="description">Ex: test@example.com</span>
    </div>
    <div class="group wat-cf">
      <label class="label"><%= f.label :password %></label>
      <%= f.password_field :password, :class => "text_field" %>
      <span class="description">Must contains the word 'yeah'</span>
    </div>
    
    <div class="group">
      <label class="label"><%= f.label :password_confirmation %></label>
      <%= f.password_field :password_confirmation, :class => "text_field" %>
      <span class="description">Must contains the word 'yeah'</span>
    </div>
    
    <div class="group navform wat-cf">
      <button class="button" type="submit">
      	<img src="<%= asset_path('web-app-theme/icons/tick.png')%>" alt="Save"> Signup
      </button>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


